<h1>All Blogs</h1>
<ul>
  <% blogs.forEach((blog) => { %>
  <li>
    <a href="/<%= blog.id %>"><%= blog.title %></a>
    <form action="/<%= blog.id %>" method="POST" style="display: inline">
      <input type="hidden" name="_method" value="DELETE" />
      <button type="submit">Delete</button>
    </form>
  </li>
  <% }); %>
</ul>
<a href="/new">New Blog</a>
